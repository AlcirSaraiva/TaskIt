<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/appTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="20sp"/>

        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/ic_launcher_round"
            android:scaleType="fitCenter"
            android:background="#00000000"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10">

        <LinearLayout
            android:id="@+id/main_containner"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingBottom="10dp"
            android:orientation="vertical"
            android:layout_weight="8">

            <LinearLayout
                android:id="@+id/login_card"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:paddingTop="15dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingBottom="20dp"
                android:background="#ffcccccc"
                android:visibility="gone" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Login"
                    android:layout_marginBottom="20dp"
                    android:textSize="18sp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffaaaaaa"
                    android:hint="username"
                    android:singleLine="true"
                    android:lines="1"
                    android:padding="5dp"
                    android:layout_marginBottom="15dp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffaaaaaa"
                    android:hint="password"
                    android:singleLine="true"
                    android:lines="1"
                    android:padding="5dp"
                    android:layout_marginBottom="15dp" />

                <Button
                    android:id="@+id/sign_in_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sign in"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/task_master_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:paddingTop="15dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingBottom="20dp"
                android:background="#ffcccccc"
                android:visibility="gone" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Task Master"
                    android:layout_marginBottom="20dp"
                    android:textSize="18sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_weight="1" >

                        <ImageButton
                            android:id="@+id/task_master_taskers_card_button"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@mipmap/ic_launcher_round"
                            android:scaleType="fitCenter"
                            android:background="#00000000"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Taskers"
                            android:textSize="14sp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_weight="1">

                        <ImageButton
                            android:id="@+id/task_master_tasks_card_button"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@mipmap/ic_launcher_round"
                            android:scaleType="fitCenter"
                            android:background="#00000000"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Their Tasks"
                            android:textSize="14sp"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/tasker_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:paddingTop="15dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingBottom="20dp"
                android:background="#ffcccccc"
                android:visibility="gone" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tasker"
                    android:layout_marginBottom="20dp"
                    android:textSize="18sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_weight="1" >

                        <ImageButton
                            android:id="@+id/tasker_tasks_card_button"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@mipmap/ic_launcher_round"
                            android:scaleType="fitCenter"
                            android:background="#00000000"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="My Tasks"
                            android:textSize="14sp"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/admin_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:paddingTop="15dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingBottom="20dp"
                android:background="#ffcccccc"
                android:visibility="gone" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Admin"
                    android:layout_marginBottom="10dp"
                    android:textSize="18sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/add_user_card_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Add user"
                            android:layout_marginTop="5dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="end">

                        <Button
                            android:id="@+id/change_pass_card_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Password"
                            android:layout_marginTop="5dp"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/task_master_taskers_card"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:paddingTop="15dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingBottom="20dp"
                android:background="#ffcccccc"
                android:visibility="gone" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Taskers"
                    android:layout_marginBottom="15dp"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/users_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#333"
                    android:padding="10dp"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/task_master_tasks_card"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:paddingTop="15dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingBottom="20dp"
                android:background="#ffcccccc"
                android:visibility="gone" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tasks"
                    android:layout_marginBottom="15dp"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/add_task_card_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New task" />

                <TextView
                    android:id="@+id/their_tasks_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#333"
                    android:padding="10dp"
                    android:layout_marginTop="20dp"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/tasker_tasks_card"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:paddingTop="15dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingBottom="20dp"
                android:background="#ffcccccc"
                android:visibility="gone" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tasks assigned to me"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/my_tasks_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#333"
                    android:padding="10dp"
                    android:layout_marginTop="20dp"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/add_task_card"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:paddingTop="15dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingBottom="20dp"
                android:background="#ffcccccc"
                android:visibility="gone" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New task"
                    android:layout_marginBottom="20dp"
                    android:textSize="18sp" />

                <Spinner
                    android:id="@+id/add_task_tasker_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="#ffaaaaaa"
                    android:spinnerMode="dropdown"
                    android:textSize="18sp"
                    android:layout_marginBottom="15dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffaaaaaa"
                    android:hint="Task title"
                    android:singleLine="true"
                    android:lines="1"
                    android:padding="5dp"
                    android:layout_marginBottom="15dp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffaaaaaa"
                    android:hint="Description"
                    android:singleLine="false"
                    android:lines="5"
                    android:gravity="top"
                    android:padding="5dp"
                    android:layout_marginBottom="15dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Deadline"
                    android:background="#ffaaaaaa"
                    android:layout_marginBottom="15dp"
                    android:padding="5dp"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:gravity="bottom">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="start">

                        <Button
                            android:id="@+id/add_one_task_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Add one task"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end">

                        <Button
                            android:id="@+id/add_more_task_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Add &amp; One more"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/add_user_card"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:paddingTop="15dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingBottom="20dp"
                android:background="#ffcccccc"
                android:visibility="gone" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add User"
                    android:layout_marginBottom="20dp"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/add_user_name_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffaaaaaa"
                    android:hint="Name"
                    android:inputType="textCapWords"
                    android:singleLine="true"
                    android:lines="1"
                    android:padding="5dp"
                    android:layout_marginBottom="15dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginBottom="15dp">

                    <CheckBox
                        android:id="@+id/add_user_task_master"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Task Master" />

                    <CheckBox
                        android:id="@+id/add_user_admin"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Admin" />

                </LinearLayout>

                <TextView
                    android:id="@+id/add_user_id_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ID"
                    android:background="#ffaaaaaa"
                    android:layout_marginBottom="15dp"
                    android:padding="5dp"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/add_user_generate_id_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Generate new ID"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="bottom">

                    <Button
                        android:id="@+id/add_user_add_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/change_password_card"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:paddingTop="15dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingBottom="20dp"
                android:background="#ffcccccc"
                android:visibility="gone" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Change password"
                    android:layout_marginBottom="20dp"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/change_password_old_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffaaaaaa"
                    android:hint="Old password"
                    android:inputType="textVisiblePassword"
                    android:singleLine="true"
                    android:lines="1"
                    android:padding="5dp"
                    android:layout_marginBottom="40dp"/>

                <EditText
                    android:id="@+id/change_password_new1_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffaaaaaa"
                    android:hint="New password"
                    android:inputType="textVisiblePassword"
                    android:singleLine="true"
                    android:lines="1"
                    android:padding="5dp"
                    android:layout_marginBottom="15dp"/>

                <EditText
                    android:id="@+id/change_password_new2_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffaaaaaa"
                    android:hint="Repeat new password"
                    android:inputType="textVisiblePassword"
                    android:singleLine="true"
                    android:lines="1"
                    android:padding="5dp"
                    android:layout_marginBottom="15dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="bottom">

                    <Button
                        android:id="@+id/change_password_change_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Change password" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="2">

            <TextView
                android:id="@+id/info_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:text="System messages"/>

            <TextView
                android:id="@+id/info"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#333"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:padding="10dp"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>